<Window x:Class="labwork_4_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:labwork_4_1"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="900" ResizeMode="NoResize">

    <Grid>
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left" >
            <oxy:PlotView x:Name="SinField" Width="300" Height="500"/>
        </StackPanel>

        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" >
            <oxy:PlotView x:Name="ParabolaField" Width="300" Height="500"/>
        </StackPanel>

        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right" >
            <oxy:PlotView x:Name="LnField" Width="300" Height="500"/>
        </StackPanel>
    </Grid>
</Window>
